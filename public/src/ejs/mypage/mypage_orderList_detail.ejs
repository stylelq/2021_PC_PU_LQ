<%
type = "mypage"
page = "mypage"
popup = "true"
lnbTitle = "주문배송조회"
%>
<% include ../_include/_header %>
<div class="container">
    <div class="site-main">
        <% include ../_include/_lnbMyPage %>
        <section class="service-center">
            <div class="myOrderListDetail">
                <div class="center-right__head">
                    <p class="center-right__title">주문배송조회</p>
                </div>
                <!-- 기간조회::detail -->
                <div class="myOrderList-detail bg-gray">
                    <div class="myOrderList-detail__order">
                        <div class="myOrderList-detail__order--txt">
                            <p>주문번호 <span>P20210812142407</span></p>
                            <span>( 2021.10.19 오후 04:10 )</span>
                        </div>
                        <button class="myOrderList-detail__search-btn btn-v1 type-white">반품신청</button>
                    </div>
                </div>
                <!-- .기간조회::detail  -->

                <!-- 리스트 -->
                <section class="myOrderList-section">
                    <h4 class="myOrderList-section__title">주문 상품정보</h4>
                    <div class="order-mypage__list">
                        <% include ../_include/_orderItem %>
                    </div>
                    <% include ../_include/_paging %>
                </section>
                <!-- //리스트 -->

                <!-- 배송지 정보 -->
                <section class="myOrderListDetail-info ">
                    <h2 class="fieldset__title">
                        배송지 정보
                        <a class="info-more js-popup-open" href="#addressModifyPop">배송지 변경</a>
                    </h2>
                    <div class="myOrderListDetail-cont">
                        <dl class="fieldset-dl__group">
                            <dt><div class="fieldset-dl__label">받으시는 분</div></dt>
                            <dd><div class="fieldset-dl__text">홍길동</div></dd>
                        </dl>
                        <dl class="fieldset-dl__group">
                            <dt><div class="fieldset-dl__label">휴대폰 번호</div></dt>
                            <dd><div class="fieldset-dl__text">010-1234-5678</div></dd>
                        </dl>
                        <dl class="fieldset-dl__group">
                            <dt><div class="fieldset-dl__label">전화번호</div></dt>
                            <dd><div class="fieldset-dl__text">-</div></dd>
                        </dl>
                        <dl class="fieldset-dl__group">
                            <dt><div class="fieldset-dl__label">주소</div></dt>
                            <dd><div class="fieldset-dl__text">(02586) 서울시 동대문구 하정로 26 (신설동) 3F</div></dd>
                        </dl>
                        <dl class="fieldset-dl__group">
                            <dt><div class="fieldset-dl__label">배송메세지</div></dt>
                            <dd><div class="fieldset-dl__text">빠른 배송 부탁드립니다.</div></dd>
                        </dl>
                    </div>
                </section>
                <!-- //배송지 정보 -->

                <!-- 결제금액 -->
                <section class="myOrderListDetail-payment">
                    <div class="payment-total">
                        <h2 class="fieldset__title">결제금액</h2>
                        <div class="payment-total__cont">
                            <dl class="fieldset-dl__group group-bold">
                                <dt><div class="fieldset-dl__label">총 주문상품금액</div></dt>
                                <dd><div class="fieldset-dl__text">328,000원</div></dd>
                            </dl>
                            <dl class="fieldset-dl__group">
                                <dt><div class="fieldset-dl__label">쿠폰할인금액</div></dt>
                                <dd><div class="fieldset-dl__text">-38,710원</div></dd>
                            </dl>
                            <dl class="fieldset-dl__group">
                                <dt><div class="fieldset-dl__label">적립금 즉시할인</div></dt>
                                <dd><div class="fieldset-dl__text">0원</div></dd>
                            </dl>
                            <dl class="fieldset-dl__group">
                                <dt><div class="fieldset-dl__label">적립금 사용</div></dt>
                                <dd><div class="fieldset-dl__text">-2,000원</div></dd>
                            </dl>
                            <dl class="fieldset-dl__group">
                                <dt><div class="fieldset-dl__label">배송비</div></dt>
                                <dd><div class="fieldset-dl__text">0원</div></dd>
                            </dl>
                        </div>
                        <div class="payment-total__price">
                            <p class="payment-total__price--title">TOTAL</p>
                            <p class="payment-total__price--text">289,290원</p>
                        </div>
                    </div>
                </section>
                <!-- //결제금액 -->

                <!-- 결제정보 -->
                <section class="myOrderListDetail-paymentMethod">
                    <div class="payment-info">
                        <h2 class="fieldset__title">결제정보</h2>
                        <div class="payment-info__cont">
                            <dl class="fieldset-dl__group">
                                <dt><div class="fieldset-dl__label">결제방법</div></dt>
                                <dd><div class="fieldset-dl__name">신용카드</div></dd>
                            </dl>
                            <dl class="fieldset-dl__group">
                                <dt><div class="fieldset-dl__label">결제정보</div></dt>
                                <dd><div class="fieldset-dl__name">
                                    <p>승인번호 : 12345678</p>
                                    <p>신용카드 정보 : 외환 9411****3949****</p>
                                    <p>할부 : 일시불</p>
                                    <div class="fieldset-dl__btn"><button class="btn-v3 btn-v3--small type-white">신용카드 영수중</button></div>
                                </div></dd>
                            </dl>
                        </div>
                    </div>
                </section>
                <!-- //결제정보 -->

                <!-- 주문고객정보 -->
                <section class="myOrderListDetail-user">
                    <h2 class="fieldset__title">주문자 정보</h2>
                    <div class="myOrderListDetail-cont">
                        <% include ../_include/_ordererInfo %>
                    </div>
                </section>
                <!-- //주문고객정보 -->

                <!-- 목록보기 -->
                <div class="center-single__btn">
                    <a href="" class="btn-v1 type-white">목록보기</a>
                </div>
                <!-- .목록보기 -->
            </div>
        </section>
    </div>
</div>
<% include ../_include/_contentFooter %>
